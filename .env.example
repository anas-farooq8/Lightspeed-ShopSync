# Supabase Environment Variables Example File
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Lightspeed API Credentials (Add for Multiple Shops)
LIGHTSPEED_API_KEY_{TLD}=your_lightspeed_api_key_here
LIGHTSPEED_API_SECRET_{TLD}=your_lightspeed_api_secret_here

# App URL (optional, for analytics)
# Local: http://localhost:3000
# Deployment: https://lightspeed-shopsync.vercel.app
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Google Service Account (Translation API v3, GA, Search Console)
# Grant role: Cloud Translation API User. Enable: https://console.cloud.google.com/apis/library/translate.googleapis.com
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=project-id
GOOGLE_PRIVATE_KEY_ID=project-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=service-account-email
GOOGLE_CLIENT_ID=client-id
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_CERT_URL=google-client-cert-url
GOOGLE_UNIVERSE_DOMAIN=googleapis.com